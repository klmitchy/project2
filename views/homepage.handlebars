<!-- Loop over each object in the projects array -->
{{#each comments as |comments| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
     
      <a href="/comments/{{comments.id}}">{{comments.name}}</a>
    </h2>
    
    <p>Created by {{user.name}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{comments.description}}
    </p>
  </div>
</div>
{{/each}}
